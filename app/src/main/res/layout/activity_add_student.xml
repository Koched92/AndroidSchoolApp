<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewParentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="34sp"
        android:text="Parent"

        >
    </TextView>

    <TextView
        android:id="@+id/textNom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/textViewParentName"
        android:text="Nom"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editTextStudentName"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        />

    <TextView
        android:id="@+id/textPrenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/editTextStudentName"
        android:text="PrÃ©nom"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editTextStudentLN"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPrenom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        />

    <TextView
        android:id="@+id/textDateN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/editTextStudentLN"
        android:text="Date de Naissance"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editTextStudentBirth"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDateN"
        android:hint="23/07/1992"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        />
    <TextView
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/editTextStudentBirth"
        android:text="Email"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editTextStudentEmail"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEmail"
        android:hint="hichem.koched@gmail.com"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        />
    <TextView
        android:id="@+id/textMP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/editTextStudentEmail"
        android:text="Mot de Passe"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editTextStudentMP"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMP"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/black"
        />

    <TextView
        android:id="@+id/textNiveau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/editTextStudentMP"
        android:text="Niveau"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Spinner
        android:id="@+id/spinnerLevel"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:entries="@array/levels"
        android:layout_below="@+id/textNiveau"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="302dp"></Spinner>
    <TextView
        android:id="@+id/Avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/spinnerLevel"
        android:text="Avatar"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Spinner
        android:id="@+id/spinnerAvatar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:entries="@array/levels"
        android:layout_below="@+id/Avatar"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="302dp"></Spinner>
    <TextView
        android:id="@+id/parentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/buttonAddStudent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Ajouter"
        android:layout_below="@+id/spinnerAvatar"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/button_rounded1"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/buttonListStudent"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerAvatar"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30sp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_rounded1"
        android:text="Liste "
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        />

</RelativeLayout>